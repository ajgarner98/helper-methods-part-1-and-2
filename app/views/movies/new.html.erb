<h1>New movie</h1>

<% @the_movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(url: movies_path(@movie), data: { turbo: false }) do %>
  <div>
    <%=label_tag :title %>
    <%=text_field_tag :title, @the_movie.title%>
  </div>

  <div>
    <%=label_tag :description%>

    <%=text_area_tag :description, @the_movie.description, {row: 3}%>
  </div>

  <%=button_tag "Create Movie"%>
<% end %>
